<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LiveChartsDemo">

    <!-- 橙色渐变刷 -->
    <LinearGradientBrush x:Key="OrangeLinearBrush" StartPoint="0 0.5" EndPoint="1 0.5">
        <GradientStop Color="#00EBF573" Offset="0" />
        <GradientStop Color="#FFEB9463" Offset="0.5" />
        <GradientStop Color="#00FFBE82" Offset="1" />
    </LinearGradientBrush>

    <!-- 红色渐变刷 -->
    <LinearGradientBrush x:Key="RedLinearBrush" StartPoint="0 0.5" EndPoint="1 0.5">
        <GradientStop Color="#33F573B1" Offset="0" />
        <GradientStop Color="#FFEB6370" Offset="0.5" />
        <GradientStop Color="#33FF82F1" Offset="1" />
    </LinearGradientBrush>

    <!-- 紫色渐变刷 -->
    <LinearGradientBrush x:Key="PurpleLinearBrush" StartPoint="0 0.5" EndPoint="1 0.5">
        <GradientStop Color="#00944DFF" Offset="0" />
        <GradientStop Color="#FF944DFF" Offset="0.5" />
        <GradientStop Color="#00FF82F1" Offset="1" />
    </LinearGradientBrush>

    <!-- 绿色渐变刷 -->
    <LinearGradientBrush x:Key="GreenLinearBrush" StartPoint="0 0.5" EndPoint="1 0.5">
        <GradientStop Color="#00944DFF" Offset="0" />
        <GradientStop Color="#FF47D3B4" Offset="0.5" />
        <GradientStop Color="#00944DFF" Offset="1" />
    </LinearGradientBrush>



</ResourceDictionary>