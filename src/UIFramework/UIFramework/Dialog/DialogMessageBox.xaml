<core:BaseDialogUserControl x:Class="UIFramework.DialogMessageBox"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:local="clr-namespace:UIFramework"
                            xmlns:core="clr-namespace:UIFramework.Core;assembly=UIFramework.Core"
                            mc:Ignorable="d"
                            Height="200"
                            Width="400"
                            Background="Green">
    <Grid>
        <TextBlock Text="Hello World!"
                   FontSize="50" />
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontSize="50"
                Command="{Binding CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=core:BaseDialogUserControl}}">关闭</Button>
    </Grid>
</core:BaseDialogUserControl>
