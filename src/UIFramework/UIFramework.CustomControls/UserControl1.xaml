<UserControl x:Class="UIFramework.CustomControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIFramework.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <local:CustomPanel Grid.ColumnSpan="2" />

        <GroupBox Header="Hello World!">
            <Grid Name="Hello"></Grid>
        </GroupBox>

        <local:CustomPanel>
            <Grid Name="He">
                <TextBlock Text="Hello World! " FontSize="50"/>
            </Grid>
        </local:CustomPanel>

    </Grid>
</UserControl>
