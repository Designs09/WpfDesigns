<UserControl x:Class="UIFramework.Tutorial.Fonts.FontsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIFramework.Tutorial.Fonts"
             xmlns:local1="clr-namespace:UIFramework.Tutorial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListView ItemsSource="{Binding}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Converter={local1:FontDisplayConverter}}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
